<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242343"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_width="402dp"
        android:layout_height="0dp"
        android:layout_gravity="center|right"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        android:background="#62ECAF"

        android:padding="10dp"
        android:textColor="#0000ff"
        android:="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/ac"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/keyboard_btn"
            android:text="AC"
            android:onClick="ButtonClick"
            android:textStyle="bold"
           android:textSize="30dp"
            android:textColor="@color/teal_200"

            android:="30dp"
            />

        <Button
            android:id="@+id/power"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30dp"
            android:onClick="ButtonClick"

            android:background="@drawable/keyboard_btn"
            android:text="^"

            android:="30dp" />

        <Button
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="30dp"
            android:background="@drawable/keyboard_btn"
            android:text="←"

            android:="30dp" />

        <Button
            android:id="@+id/div"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textsize="30dp"
            android:onClick="ButtonClick"
            android:textStyle="bold"
            android:background="@drawable/keyboard_btn"
            android:text="/"
            android:textSize="30dp"

            android:="30dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/seven"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            android:textStyle="bold"
            android:textSize="30dp"
            android:background="@drawable/keyboard_btn"
            android:text="7"

            android:="30dp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:background="@drawable/keyboard_btn"
            android:text="8"

            android:="30dp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="30dp"
            android:background="@drawable/keyboard_btn"
            android:text="9"

            android:="30dp" />

        <Button
            android:id="@+id/mul"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:background="@drawable/keyboard_btn"
            android:text="X"
            android:textColor="@color/white"
            android:="30dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/four"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:background="@drawable/keyboard_btn"
            android:text="4"

            android:="30dp" />

        <Button
            android:id="@+id/five"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:textStyle="bold"
            android:background="@drawable/keyboard_btn"
            android:text="5"
            android:onClick="ButtonClick"

            android:="30dp" />

        <Button
            android:id="@+id/six"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:textStyle="bold"
            android:background="@drawable/keyboard_btn"
            android:text="6"

            android:="30dp" />

        <Button
            android:id="@+id/sub"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:onClick="ButtonClick"
            android:textSize="30dp"
            android:background="@drawable/keyboard_btn"
            android:text="-"
            android:textColor="@color/white"
            android:="30dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/one"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:="30dp"
            android:background="@drawable/keyboard_btn"
            android:text="1"
            android:textSize="30dp"

            android:textStyle="bold"
            android:onClick="ButtonClick"
            />

        <Button
            android:id="@+id/two"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:="30dp"
            android:background="@drawable/keyboard_btn"
            android:text="2"
            android:textSize="30dp"
            android:onClick="ButtonClick"

            android:textStyle="bold" />

        <Button
            android:id="@+id/three"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="ButtonClick"
            android:="30dp"
            android:background="@drawable/keyboard_btn"
            android:text="3"
            android:textSize="30dp"

            android:textStyle="bold" />

        <Button
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:background="@drawable/keyboard_btn"
            android:text="+"
            android:textColor="@color/white"
            android:="30dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textSize="30dp"
            android:onClick="ButtonClick"
            android:textStyle="bold"
            android:background="@drawable/keyboard_btn"
            android:text="0"

            android:="30dp" />

        <Button
            android:id="@+id/point"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30dp"
            android:background="@drawable/keyboard_btn"
            android:text="."

            android:="30dp" />

        <Button
            android:id="@+id/ans"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="22dp"
            android:background="@drawable/keyboard_btn"
            android:text="Ans"

            android:="30dp" />

        <Button
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="30dp"
            android:background="@drawable/keyboard_btn"
            android:text="="
            android:textColor="@color/white"
            android:="30dp" />


    </LinearLayout>

</LinearLayout>